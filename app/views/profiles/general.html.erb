<h3 class="text-center mt-4">General Information</h3>

<div class="d-flex flex-row justify-content-center my-4">
  <%= form_for @profile, url: wizard_path, method: :put, html: {class: 'w-50'} do |f| %>
    <div class="bar-container my-2">
      <div class="bar bg-primary" style="width: <%= @progress.to_i %>;"></div>
    </div>

    <div class="field my-1">
      <%= f.label :first_name, class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control" %>
      <small class="text-danger">
        <%= f.object.errors.full_messages_for(:first_name)&.first %>
      </small>
    </div>

    <div class="field my-1">
      <%= f.label :last_name, class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
      <small class="text-danger">
        <%= f.object.errors.full_messages_for(:last_name)&.first %>
      </small>
    </div>

    <div class="field my-1">
      <%= f.label :age, class: "form-label" %>
      <%= f.number_field :age, class: "form-control" %>
      <small class="text-danger">
        <%= f.object.errors.full_messages_for(:age)&.first %>
      </small>
    </div>

    <div class="field my-1">
      <%= f.label :date_of_birth, class: "form-label" %>
      <%= f.date_field :date_of_birth, class: "form-control" %>
      <small class="text-danger">
        <%= f.object.errors.full_messages_for(:date_of_birth)&.first %>
      </small>
    </div>

    <div class="field my-1">
      <%= f.label :phone_number, class: "form-label" %>
      <%= f.text_field :phone_number, class: "form-control" %>
      <small class="text-danger">
        <%= f.object.errors.full_messages_for(:phone_number)&.first %>
      </small>
    </div>

    <div class="field my-1">
      <%= f.label :email, class: "form-label" %>
      <%= f.text_field :email, class: "form-control" %>
      <small class="text-danger">
        <%= f.object.errors.full_messages_for(:email)&.first %>
      </small>
    </div>

    <div class="field my-1">
      <%= f.label :postal_code, class: "form-label" %>
      <%= f.text_field :postal_code, class: "form-control" %>
      <small class="text-danger">
        <%= f.object.errors.full_messages_for(:postal_code)&.first %>
      </small>
    </div>

    <div class="field my-1">
      <%= f.label :city, class: "form-label" %>
      <%= f.text_field :city, class: "form-control" %>
      <small class="text-danger">
        <%= f.object.errors.full_messages_for(:city)&.first %>
      </small>
    </div>

    <div class="field my-1">
      <%= f.label :country, class: "form-label" %>
      <%= f.text_field :country, class: "form-control" %>
      <small class="text-danger">
        <%= f.object.errors.full_messages_for(:country)&.first %>
      </small>
    </div>
    <%= f.submit 'Next', name: "next", class: "btn btn-primary mt-2" %>
  <% end %>
</div>
